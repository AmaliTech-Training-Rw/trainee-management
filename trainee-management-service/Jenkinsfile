pipeline {
    agent any

    environment {
        DOCKER_IMAGE_TAG = "latest"
        DOCKER_CREDENTIALS = 'kety' // Your Docker credentials ID
        SONARQUBE_SERVER = 'SonarQube'
        KUBECONFIG_CREDENTIALS = 'kubernets'
        SONAR_TOKEN = credentials('sona') // SonarQube token from Jenkins credentials
        GIT_CREDENTIALS = credentials('	job1') // Git credentials from Jenkins credentials
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Use Git credentials for cloning the repository
                git url: 'https://github.com/Magnifique67/trainee-management.git', branch: 'develop', credentialsId: GIT_CREDENTIALS
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image for trainee-management-service
                    docker.build("trainee-management-service:${DOCKER_IMAGE_TAG}", '.')
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS) {
                        // Push the Docker image for trainee-management-service
                        docker.image("trainee-management-service:${DOCKER_IMAGE_TAG}").push()
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run tests inside the Docker container
                    docker.image("trainee-management-service:${DOCKER_IMAGE_TAG}").inside {
                        sh './gradlew test'
                    }
                }
            }
        }

        stage('SonarQube Code Analysis') {
            steps {
                script {
                    // Perform SonarQube analysis
                    withSonarQubeEnv(SONARQUBE_SERVER) {
                        sh '''
                        sonar-scanner \
                          -Dsonar.projectKey=trainee-management \
                          -Dsonar.sources=src \
                          -Dsonar.login=$SONAR_TOKEN
                        '''
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Apply Kubernetes configuration
                    withCredentials([file(credentialsId: KUBECONFIG_CREDENTIALS, variable: 'KUBECONFIG')]) {
                        sh 'kubectl apply -f k8s/trainee-management-deployment.yml'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished for Trainee Management Service.'
        }
        success {
            echo 'Deployment successful for Trainee Management Service.'
        }
        failure {
            echo 'Pipeline failed for Trainee Management Service.'
        }
    }
}
